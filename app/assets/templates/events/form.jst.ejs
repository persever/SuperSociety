<div class="card-modal-backdrop">
</div>

<div class="card-modal">

  <form>
    <label>Group</label>
    <select name="event[group_id]">
      <% groups.each(function (group) { %>
        <option value="<%= group.id %>"><%= group.escape("name") %></option>
      <% }) %>
    </select>
    <br>

    <label>Title</label>
    <input type="text" name="event[title]" value="<%= event.escape("title") %>">
    <br>

    <label>When</label>
    <input type="datetime" name="event[datetime]" value="<%= event.escape("date") %>">
    <br>

    <label>Where</label>
    <input type="text" name="event[location]" value="<%= event.escape("location") %>">
    <br>

    <label>Description</label>
    <textarea name="event[description]" value="<%= event.escape("description") %>"></textarea>

    <input type="submit">
  </form>

  <div class="errors"></div>

</div>
